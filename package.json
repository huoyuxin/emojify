  "dependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commander": "^3.0.2",
    "husky": "^3.0.9"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "commitlint -e $HUSKY_GIT_PARAMS;",
